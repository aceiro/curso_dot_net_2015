@model WebApplication_Exemplo3.Models.CalculadoraViewModel

@{
    ViewBag.Title = "Adicao";
}

<h2>Adição</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CalculadoraViewModel</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Numero1, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numero1)
                @Html.ValidationMessageFor(model => model.Numero1)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Numero2, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numero2)
                @Html.ValidationMessageFor(model => model.Numero2)
            </div>
        </div>

        @{
            if (Model != null)
            {
                 <div class="form-group">
                    @Html.LabelFor(model => model.Resultado, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Resultado)
                    </div>
                </div>
            }      
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Calcular" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retornar", "Index")
</div>
